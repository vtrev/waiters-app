<div class="row center">
    <div class="col-12 inblock">
        <h3 class="{{this.css.welcome}}">{{welcomeMessage}}
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-12 center">
        <h3 class=" {{this.css.flash}}">{{messages.info}}</h3>
    </div>
</div>
<div class="row center">
    <div class="col-12">
        <form id="userDays" method="POST" action="">
            <br>
            <div class="in-block col-12 radio-toolbar">

                <input type="checkbox" {{#if this.days.Monday}}Checked {{/if}} name="weekdays" value="0" id="0">
                <label for="0">Monday</label>
                <input type="checkbox" {{#if this.days.Tuesday}}checked {{/if}} name="weekdays" value="1" id="1">
                <label for="1">Tuesday</label>
                <input type="checkbox" {{#if this.days.Wednesday}} checked {{/if}} name="weekdays" value="2" id="2">
                <label for="2">Wednesday</label>
                <input type="checkbox" {{#if this.days.Thursday}} checked {{/if}}name="weekdays" value="3" id="3">
                <label for="3">Thursday</label>
                <input type="checkbox" {{#if this.days.Friday}} checked {{/if}} name="weekdays" value="4" id="4">
                <label for="4">Friday</label>
                <input type="checkbox" {{#if this.days.Saturday}} checked {{/if}} name="weekdays" value="5" id="5">
                <label for="5">Saturday</label>
                <input type="checkbox" {{#if this.days.Sunday}} checked {{/if}} name="weekdays" value="6" id="6">
                <label for="6">Sunday</label>
                <br>
                <br>
                <br>
                <button type="submit">Submit</button>
            </div>
    </div>
    </form>
</div>